# ServiceEats - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===================
# DATABASE CONFIGURATION
# ===================
# MongoDB URIs for each service
MONGO_URI_USERS=mongodb://localhost:27017/service-eats-users
MONGO_URI_RESTAURANTS=mongodb://localhost:27017/service-eats-restaurants
MONGO_URI_ORDERS=mongodb://localhost:27017/service-eats-orders
MONGO_URI_PAYMENTS=mongodb://localhost:27017/service-eats-payments
MONGO_URI_DELIVERIES=mongodb://localhost:27017/service-eats-deliveries
MONGO_URI_NOTIFICATIONS=mongodb://localhost:27017/service-eats-notifications

# ===================
# KAFKA CONFIGURATION
# ===================
KAFKA_BROKER=kafka:9092

# ===================
# AUTHENTICATION
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===================
# STRIPE PAYMENT
# ===================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PAYMENT_CURRENCY=inr

# ===================
# API GATEWAY
# ===================
GATEWAY_PORT=3000

# ===================
# SERVICE PORTS
# ===================
USER_SERVICE_PORT=4001
RESTAURANT_SERVICE_PORT=4002
ORDER_SERVICE_PORT=4003
DELIVERY_SERVICE_PORT=4004
PAYMENT_SERVICE_PORT=4005
NOTIFICATION_SERVICE_PORT=4006

# ===================
# FRONTEND CONFIGURATION
# ===================
# Next.js variables (must be prefixed with NEXT_PUBLIC_ to be exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===================
# AZURE DEPLOYMENT (Production)
# ===================
# Uncomment and configure for Azure deployment
# MONGO_URI_USERS=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-users
# MONGO_URI_RESTAURANTS=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-restaurants
# MONGO_URI_ORDERS=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-orders
# MONGO_URI_PAYMENTS=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-payments
# MONGO_URI_DELIVERIES=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-deliveries
# MONGO_URI_NOTIFICATIONS=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/service-eats-notifications
# KAFKA_BROKER=<azure-kafka-endpoint>
# NEXT_PUBLIC_API_URL=https://your-gateway.azurewebsites.net
